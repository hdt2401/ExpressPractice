<div class="form-login mt-4 p-4">
  <form action="/{{phone.name}}?_method=PUT" method="POST">
    <div class="form-group mt-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="form-control"
        placeholder="name"
        value="{{phone.name}}"
      />
    </div>

    <div class="form-group mt-3">
      <label for="price" class="form-label">Price</label>
      <input
        type="text"
        name="price"
        id="price"
        class="form-control"
        placeholder="price"
        value="{{phone.price}}"
      />
    </div>

    <div class="form-group mt-3">
      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        name="description"
        id="description"
        class="form-control"
        placeholder="description"
        value="{{phone.description}}"
      />
    </div>

    <div class="form-group mt-3">
      <label for="image" class="form-label">Image</label>
      <input
        type="text"
        name="image"
        id="image"
        class="form-control"
        placeholder="image"
        value="{{phone.image}}"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
  </form>
</div>